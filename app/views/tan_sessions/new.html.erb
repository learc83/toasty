<section id="content">
  <section id="dash_buttons">
    <ul>
      <% @beds.each do |bed| %>
        <% number = bed.bed_number %>
    	  <li id="<%= number %>">
    		  <%= link_to(salon_tan_sessions_path(@current_salon.to_param), "data-bed" => number) do %>
    		    <span><%= number %></span>
    		    <span>Level <%= bed.level %></span>
    		  <% end %>
    	  </li>
    	<% end %>
    </ul>
  </section>
  <section id="dash_controls">
    <section id="dash_bed_controls">
      <%= form_for([@current_salon, @tan_session]) do |f|%>
        <%= f.hidden_field(:bed_id) %>
        <div id="dash_minutes">
          <a id="dash_up_arrow" href="#"></a>
          <p>
            <%= f.text_field(:minutes, :size => 2, :maxlength => 2, :value => 2) %>
          </p>
          <a id="dash_down_arrow" href="#"></a>
        </div>
        <div id="dash_start">
          <h2>
            Room
            <span>15</span>
          </h2>
          <form>
            <input id="reset" type="image" src="/images/reset_button.png" name="reset" width="92" height="38" alt="reset button" />
            <p id="delay">Delay</p>
            <input id="delay_text" name="tan_session[delay]" type="text" size="1" value="3" maxlength="1"/>
            <input id="start_admin" type="image" src="/images/start_button_admin.png" name="reset" width="239" height="73" alt="start button" />
          </form>
          <p id="admin_customer_name">Krontz, Michael <br /> Level 1</p>
        </div>
      <% end %>
    </section>
    
    <section id="dash_customer_search">
      <input id="dash_search_box" type="text" size="19" value="Search" maxlength="50"/>
    </section>
  </section>
</section>