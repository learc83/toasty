        <input id="admin_login_field" type="text" size="19" placeholder="New Password" name="login" maxlength="50" autocomplete="off"/>
        <input id="admin_login_field" type="password" size="19" placeholder="New Pass Confirm" name="password" maxlength="50" autocomplete="off"/>
        <input id="change_button" type="submit" size="19" value="Change Password" maxlength="50"/>
      <% end %>
    </div>
  </div>
