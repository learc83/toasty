<div id="main_content_case_study">
  <div id="change_wrapper">
    <%= flash_handler %>
    <div id="change_form_fields">
      <%= form_tag(change_password_path) do %>
        <input id="admin_login_field" type="text" size="19" placeholder="Username" name="login" maxlength="50" autocomplete="off"/>
