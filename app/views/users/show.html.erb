<div id="tab_wrapper">
  <div id="employee_list_tab">
    <h2>
      <%= link_to "Employee List", salon_users_path(@current_salon) %>
    </h2>
  </div>
  <div id="new_employee_tab">
    <h2>
      <%= link_to "New Employee", new_salon_user_path(@current_salon) %>
    </h2>
  </div>
</div>

<div id="show_employee_content_wrapper" class="content_wrapper">  
  <div id="employee_left"> 
    <h3><%= @user.first_name + " " + @user.last_name %></h3> 

    <p><%= @user.login %></p> 
    <p><%= @user.word_for_security_level %></p> 
    <% if @user.access_all_locations? %>
      <p id="all_salons">This Employee can Work at all Salons</p> 
    <% end %>
  </div>

  <div id="employee_right">
    <%= link_to "Edit this Employee", edit_salon_user_path(@current_salon, @user), :class => "edit_link"%>
  
    <%= button_to "Delete Employee", salon_user_path(@current_salon, @user),
                                     :method => :delete, :class => "delete_button",
                                     :confirm => "are you sure you want to DELETE this user?" %>
  </div>
</div>